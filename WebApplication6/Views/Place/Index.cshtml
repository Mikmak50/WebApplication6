@model IEnumerable<Place>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Places list</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Place" asp-action="Create" class="btn btn-primary">
                Create New Place
            </a>

        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Place Name</th>
                    <th>Street</th>
                    <th>City</th>
                    <th>Postal Code</th>
                    <th>Country</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="15%">@obj.Name</td>
                    <td width="25%">@obj.Street</td>
                    <td width="20%">@obj.City</td>
                    <td width="5%">@obj.PostalCode</td>
                    <td width="10%">@obj.Country</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Place" asp-route-Id="@obj.Id.ToString()" asp-action="Edit" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-controller="Place" asp-route-Id="@obj.Id.ToString()" asp-action="Delete" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No places exists</p>
    }
</div>
