@model IEnumerable<Car>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cars list</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Car" asp-action="Create" class="btn btn-primary">
                Create New Car
            </a>
            
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Car Name</th>
                    <th>Seats</th>
                    <th>Passenger count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="40%">@obj.Name</td>
                    <td width="15%">@obj.Seats</td>
                    <td width="25%">@obj.PassengersCount</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Car" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-controller="Car" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No cars exists</p>
    }
</div>
